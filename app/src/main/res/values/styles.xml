<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditText" >
        <item name="android:autofillHints">""</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:lines">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="singleLine">true</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/grey</item>

    </style>

    <style name="PrefixText" >
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="OptionsEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/grey</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">4</item>
        <item name="counterTextColor">@color/grey</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_launcher_foreground</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>

    </style>

    <style name="OptionsEditTextInput">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>